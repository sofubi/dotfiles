# vim: set ft=zsh :

# lsd
alias ls='lsd'
alias lt='lsd --tree'
alias tree='lsd --tree'
alias l='ls -F'
alias ll='ls -lh'
alias la='ls -lah'
alias ldot='ls -ld .*'

# with opts
alias d='dirs -v'

# nvim
alias v=vi
alias vi=vim
alias vim=nvim

# helpers
alias portfd="lsof -iTCP -sTCP:LISTEN -P -n | grep -i"

# python
alias pvd='pyenv deactivate'

# zsh
alias srz='source $ZDOTDIR/.zshrc'
